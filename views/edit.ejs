<%- include ('partials/header.ejs') %> 
<%- include ('partials/navbar.ejs') %> 

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Editar tarefas</h2>
        </div>
        <div class="card-body">
            <form action="/update" method="POST">
                <input type="hidden" name="id" value="<%= tarefa.id%> ">
                <textarea class="form-control" name="descricao" id="tarefa" cols="30" rows="10"></textarea>
                <input type="submit" class="btn btn-primary mt-2" value="Salvar">
               
            </form>
        </div>
    </div>
    <div style="display: none;"  id="content">
        <%- tarefa.descricao %> 
    </div>
</div>
<script>
    document.getElementById('tarefa').value = document.getElementById('content').innerHTML;
    
</script>



